#:kivy 1.0

<PhotoScreen>:
    Camera:
        id: camera
        resolution: (root.width, root.height)
        play: True
        size: (1200, 1080)
        allow_stretch: True
        pos:(0, 100)
    BoxLayout:
        Button:
            id: countdown_button
            size_hint: (.15, .15)
            pos: (700,10)
            text: root.buttonLabel
            on_press: root.start_countdown()
    FloatLayout:
        canvas:
            Color:
                id: flash
                rgba: 1, 1, 1, root.flash_opacity
            Rectangle:
                pos: 0, 0
                size: (root.width, root. height)
