#:kivy 1.0

<PhotoScreen>:
    FloatLayout:
        id: camera_wrapper  

        BoxLayout:
            id: loading_spinner
            orientation: "vertical"
            size_hint: (.20, .20)
            pos: (root.width / 2.5, root.height / 2.5)
            ProgressSpinner:
                speed: 1.5
                stroke_width: 2
				color: 1, 0, 0, 1
            Label:
                size: self.texture_size
                text: "PROCESSING..."
        Image:
            id: frame
            size_hint: (1,1)
            pos: (0,0)

        BoxLayout:
            Button:
                id: countdown_button
                size_hint: (.15, .15)
                pos: (700,10)
                text: root.buttonLabel
                on_press: root.start_countdown()

        FloatLayout:
            canvas:
                Color:
                    id: flash
                    rgba: 1, 1, 1, root.flash_opacity
                Rectangle:
                    pos: 0, 0
                    size: (root.width, root. height)
