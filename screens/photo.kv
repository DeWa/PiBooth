#:kivy 1.0

<PhotoScreen>:
    orientation: 'vertical'
    FloatLayout:
        padding: 0
        spacing: 0
        Camera:
            id: camera
            resolution: (root.width, root.height)
            play: True
            size: (1200, 1080)
            allow_stretch: True
            pos:(0, 100)
    BoxLayout:
        Button:
            id: countdown_button
            size_hint: (.15, .15)
            pos: (700,10)
            text: root.buttonLabel
            on_press: root.start_countdown()
