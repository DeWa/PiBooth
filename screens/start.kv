#:kivy 1.0

<StartScreen>:
    BoxLayout:
        orientation: "vertical"
        
        Label:
            pos: (10,750)
            font_size: '50sp'
            size_hint: (1, .25)
            id: 'Photobooth_logo'
            halign: 'center'
            text: 'PHOTOBOOTH'
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint: (.1, .25)
                pos: (10,400)
                text: '<'
                on_press: root.prev_frame()
            FloatLayout:
                Camera:
                    id: camera
                    size_hint: (1, 1)
                    resolution: (1280,720)
                    play: True
                Image:
                    id: frame
                    size_hint: (1,1)
                    pos: (0,0)
            Button:
                size_hint: (.1, .25)
                pos: (1450,400)
                text: '>'
                on_press: root.next_frame()
        Button:
            size_hint: (.15, .15)
            pos: (700,10)
            text: 'Select'
            on_press: root.manager.current = 'photo'
