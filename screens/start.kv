#:kivy 1.0

<StartScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/images/background.png'
    BoxLayout:
        orientation: "vertical"
        
        Label:
            pos: (10,750)
            font_size: '50sp'
            size_hint: (1, .15)
            id: 'Photobooth_logo'
            halign: 'center'
            text: 'PHOTOBOOTH'
        BoxLayout:
            orientation: "horizontal"
            AnchorLayout:
                size_hint: (.1, 1)
                Button:
                    text: '<'
                    on_press: root.prev_frame()
            AnchorLayout:
                id: camera_wrapper
                size_hint: (.8, 1)
                anchor_x: 'center'
                anchor_y: 'bottom'

                Image:
                    id: frame
                    size: (1280, 1920)
                    allow_stretch: True
                    size_hint: (1,1)
            AnchorLayout:
                size_hint: (.1, 1)
                Button:
                    text: '>'
                    on_press: root.next_frame()
        AnchorLayout:
            size_hint: (1, .15)
            anchor_x: 'center'
            Button:
                text: 'Select'
                on_press: root.manager.current = 'photo'
