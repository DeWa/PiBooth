#:kivy 1.0

<PreviewScreen>:
    Image:
        id: photo
        keep_ratio: True
        size_hint: (1,1)
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        
        canvas:
            Color:
                rgb: (1, 1, 1)
        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "back_button"
                size_hint: (.15, .15)
                pos: (700,10)
                text: "RETAKE"
                on_press: root.manager.current = 'photo'
            Button:
                id: "confirm_button"
                size_hint: (.15, .15)
                pos: (700,10)
                text: "OK"
                on_press: root.manager.current = 'share'

