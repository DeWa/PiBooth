#:kivy 1.0

<PreviewScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/images/background.png'
    BoxLayout:
        orientation: "vertical"
        size_hint: (1,1)
        Image:
            id: photo
            keep_ratio: True
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1,.15)
            Button:
                id: "back_button"
                size_hint: (.15, 1)
                pos: (700,10)
                text: "RETAKE"
                on_press: root.manager.current = 'photo'
                font_name: 'fredoka'
                font_size: '25sp'
                background_color: 0, 1, 0.77, 0.8 
            Button:
                id: "confirm_button"
                size_hint: (.15, 1)
                pos: (700,10)
                text: "OK"
                on_press: root.manager.current = 'share'
                font_name: 'fredoka'
                font_size: '25sp'
                background_color: 0, 1, 0.77, 0.8 

